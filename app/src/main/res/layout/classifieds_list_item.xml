<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:id="@+id/view_"
        android:padding="7dp"
        android:layout_height="wrap_content">
    <TextView
        android:layout_width="fill_parent"
        android:text="title"
        android:id="@+id/classifieds_item_title"
        android:textColor="#fd0000"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="fill_parent"

        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="0dip"
            android:background="@drawable/background_only_stroke"
            android:layout_weight="1"
            android:padding="1dp"
            android:layout_height="fill_parent">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_centerInParent="true"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"

                android:src="@drawable/temp_banner_"
                android:id="@+id/classifieds_image"
                android:layout_height="fill_parent" />


        </RelativeLayout>
        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="2"
            android:layout_marginLeft="7dp"
            android:orientation="vertical"
            android:id="@+id/tx"
            android:layout_height="wrap_content">
            <View
                android:layout_width="fill_parent"
                android:background="#dddddd"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="Price"
                    android:padding="3dp"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="#dddddd"
                    android:layout_height="fill_parent"/>
                <RelativeLayout
                    android:layout_width="0dip"
                    android:layout_weight="2"

                    android:layout_height="fill_parent">
                    <TextView
                        android:layout_width="wrap_content"


                        android:background="@drawable/button_blue"
                        android:text="Price"
                        android:gravity="center_vertical"
                        android:id="@+id/classifieds_price"
                        android:paddingLeft="3dp"
                        android:paddingRight="3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="3dp"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content" />
                </RelativeLayout>


            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:background="#dddddd"
                android:layout_height="1dp"/>



            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="Age"
                    android:padding="3dp"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="#dddddd"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:text="Price"
                    android:id="@+id/classifieds_age"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:background="#dddddd"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="Usage"
                    android:padding="3dp"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="#dddddd"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:text="Price"
                    android:id="@+id/classifieds_usage"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:background="#dddddd"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="Condition"
                    android:padding="3dp"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="#dddddd"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:text="Price"
                    android:id="@+id/classifieds_condition"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:background="#dddddd"
                android:layout_height="1dp"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:orientation="horizontal"

                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:text="Type"
                    android:padding="3dp"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_width="1dp"
                    android:background="#dddddd"
                    android:layout_height="fill_parent"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_weight="2"
                    android:padding="3dp"
                    android:text="Price"
                    android:id="@+id/classifieds_type"
                    android:textColor="#3f3f3f"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:background="#dddddd"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="7dp"
        android:layout_height="1dp"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="18dp"
            android:layout_gravity="left"
            android:src="@drawable/ico_location"
            android:layout_height="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/classifieds_location"
            android:layout_gravity="center_vertical"
            android:text="Text"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="18dp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="left"
            android:src="@drawable/ico_calender"
            android:layout_height="18dp" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/classifieds_p_date"
            android:text="Text"
            android:layout_marginLeft="3dp"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content" />
    </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>